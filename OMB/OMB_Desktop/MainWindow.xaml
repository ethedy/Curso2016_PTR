<Window xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"  x:Class="OMB_Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:OMB_Desktop.Views"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Loaded="MainWindow_OnLoaded"
        Title="Administracion de OMB" 
        WindowStartupLocation="CenterScreen"
        Height="700" Width="1100"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        >
  <i:Interaction.Triggers>
    <prism:InteractionRequestTrigger SourceObject="{Binding LoginRequest}">
      <prism:PopupWindowAction IsModal="True" CenterOverAssociatedObject="True">
        <prism:PopupWindowAction.WindowContent>
          <local:LoginView></local:LoginView>
        </prism:PopupWindowAction.WindowContent>
      </prism:PopupWindowAction>
    </prism:InteractionRequestTrigger>
  </i:Interaction.Triggers>

  <Window.Resources>
    <system:String x:Key="StatusNoConectado">Usuario no Conectado</system:String>

    <Style TargetType="{x:Type Button}">
      <Setter Property="Width" Value="150"></Setter>
    </Style>
    <Style x:Key="StatusBar">
      <Setter Property="Panel.Background" Value="LightSteelBlue"></Setter>
      <Setter Property="Control.FontFamily" Value="Verdana"></Setter>
      <Setter Property="Control.FontSize" Value="14"></Setter>
      <Setter Property="TextBlock.Margin" Value="5"></Setter>
    </Style>
  </Window.Resources>

  <DockPanel LastChildFill="False">
    <Grid DockPanel.Dock="Top" Background="Azure">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"></RowDefinition>
        <RowDefinition Height="Auto"></RowDefinition>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"></ColumnDefinition>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="Auto"></ColumnDefinition>
      </Grid.ColumnDefinitions>
      <Button VerticalAlignment="Center" Height="30" Padding="5" 
              Grid.Column="0" Grid.Row="0" Name="btnShowLogin"
              Style="{StaticResource BotonStandard}"  
              Command="{Binding Login}">Login</Button>
      <Button Margin="10" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" 
              Width="{Binding ElementName=btnShowLogin, Path=Width}"
              Height="{Binding ElementName=btnShowLogin, Path=Height}"
              Command="{Binding Logout}">Logout</Button>

      <TextBox Grid.Column="1" Grid.Row="1" Margin="10" Width="350" HorizontalAlignment="Right"></TextBox>
      <Button Grid.Column="2" Grid.Row="1" Margin="10" Style="{StaticResource BotonStandard}">Buscar</Button>
    </Grid>
    <ContentControl Name="mainContent">
    </ContentControl>
    <DockPanel DockPanel.Dock="Bottom" LastChildFill="False" Style="{StaticResource StatusBar}">
      <TextBlock DockPanel.Dock="Left" Text="{Binding Status, TargetNullValue='Mensaje de Status'}"></TextBlock>
      <TextBlock DockPanel.Dock="Right">
        <TextBlock.Text>
          <MultiBinding TargetNullValue="{StaticResource StatusNoConectado}" FallbackValue="{StaticResource StatusNoConectado}" 
                        StringFormat="{}{0} {1}">
            <Binding Path="Usuario.Empleado.Persona.Nombres"></Binding>
            <Binding Path="Usuario.Empleado.Persona.Apellidos"></Binding>
          </MultiBinding>
        </TextBlock.Text>
      </TextBlock>
    </DockPanel>
  </DockPanel>
</Window>
